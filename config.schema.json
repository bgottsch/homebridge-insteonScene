{	
	"pluginAlias": "isy-hub",
	"pluginType": "platform",
	"singular": true,
	"schema": {
		"title": "Title",
		"description": "description",
		"type": "object",
		"properties": {
			"name": {
				"description": "Plugin name as displayed in the homebridge log.",
				"type": "string",
				"required": true,
				"default": "isy-hub"
			},
			"username": {
				"type": "string",
				"required": true
			},
			"password": {
				"type": "string",
				"required": true
			},
			"host": {
				"type": "string",
				"required": true
			},
			"refresh_interval": {
				"type": "integer",
				"placeholder": 30000,
				"minimum": 1
			},
			"reconnect_interval": {
				"type": "integer",
				"placeholder": 5000,
				"minimum": 1
			},
			"heartbeat_interval": {
				"type": "integer",
				"placeholder": 30000,
				"minimum": 1
			},
			"devices": {
				"title": "Devices",
				"type": "array",
				"items": {
					"type": "object",
					"properties": {
						"name": {
							"type": "string",
							"required": true
						},
						"id": {
							"type": "string",
							"required": true
						},
						"type": {
							"type": "string",
							"required": true,
							"oneOf":  [
								{ "title": "Micro Dimmer",     "enum": [ "micro_dimmer" ] },
								{ "title": "Micro Open/Close", "enum": [ "micro_open_close" ] }
							]
						}
					}
				}
			}
		}
	},
	"layout": [
		{
			"type": "flex",
			"flex-flow": "row wrap",
			"items": [
				{
					"key": "name",
					"type": "name"
				},
				{
					"key": "username",
					"type": "username"
				},
				{
					"key": "password",
					"type": "password"
				},
				{
					"key": "host",
					"type": "host"
				}
			]
		},
		{
			"type": "fieldset",
			"title": "Devices",
			"expandable": true,
			"items": [
				{
					"key": "devices",
					"type": "array",
					"items": [
						{
							"type": "fieldset",
							"items": [
								"devices[name]",
								"devices[id]",
								"devices[type]"
							]
							
						}
					]
				}
			]
		}
	]
}